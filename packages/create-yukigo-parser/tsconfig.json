{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "nodenext",
    "target": "es2024",
    "types": ["node"],
    "lib": ["ES2024"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["template", "dist"],
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../yukigo-ast"
    }
  ]
}
