{
  "compilerOptions": {
    "target": "es2024",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["ES2024"],
    "outDir": "./dist",
    "sourceRoot": "./src",
    "declaration": true,
    "composite": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "dist/**/*"
  ],
  "references": [
    {
      "path": "../yukigo-ast"
    }
  ]
}
