{
  "compilerOptions": {
    "target": "es2024",
    "experimentalDecorators": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["es2024", "dom"],
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": [
    "dist/**/*"
  ],
  "references": [
    {
      "path": "../yukigo-ast"
    }
  ]
}
