{
  "name": "yukigo-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm test --workspaces --if-present",
    "build:ast": "npm run build -w @yukigo/ast",
    "docs:dev": "npm run build & npm run docs:dev --workspace=@yukigo/docs",
    "docs:gen": "npm run docs:gen --workspace=@yukigo/docs"
  },
  "dependencies": {
    "ts-morph": "^27.0.2"
  },
  "devDependencies": {
    "@nx/js": "^22.1.3",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "nx": "22.1.3"
  }
}
